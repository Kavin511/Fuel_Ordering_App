<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".petrol_availability">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="petrol_price"
        android:id="@+id/petrol_price"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="petrol_quantity"
        android:id="@+id/petrol_quantity"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="diesel_price"
    android:id="@+id/diesel_price"
    />  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="diesel quantity"
    android:id="@+id/diesel_quantity"
    />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
