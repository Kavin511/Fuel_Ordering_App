<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
    android:orientation="vertical"
        android:background="@color/colorPrimary"
        tools:context=".Fuel_update">
    <TextView
        android:id="@+id/fuel_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel"
        android:textColor="#d3e1"
        android:layout_marginBottom="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fuel_type"
        android:layout_marginBottom="20dp"
        android:text="Price: 0 Rs"
        android:textColor="#D3D1D1"
        android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove_circle_black_24dp"
                android:id="@+id/remove"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                />

            <EditText
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"

                android:layout_toEndOf="@+id/remove"
                android:background="@drawable/input_text"
                android:hint="Fuel quantity in litres"
                android:inputType="none" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle_black_24dp"
                android:id="@+id/adder_but"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/count"
                android:layout_marginBottom="20dp"
                />


        </RelativeLayout>
    </LinearLayout>